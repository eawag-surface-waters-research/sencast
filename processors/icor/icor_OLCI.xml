<graph id="mph">
	<version>1.0</version>
	<node id="icorNode">
		<operator>icor-sentinel-3-olci</operator>
		<sources>
			<sourceProduct>${sourceFile}</sourceProduct>
		</sources>
		<parameters>
			<targetProductFile>${outputFile}</targetProductFile>
			<workingFolder>${workingFolder}</workingFolder>
			<keepIntermediateData>false</keepIntermediateData>
			<applyUserDefinedGains>false</applyUserDefinedGains>
			<useProductWaterMask>${useProductWaterMask}</useProductWaterMask>
			<useInlandWaterMask>${useInlandWaterMask}</useInlandWaterMask>
			<waterDetectionBand>B18</waterDetectionBand>
			<waterMaskDetectionThreshold>0.06</waterMaskDetectionThreshold>
			<cloudDetectionLowBand>B02</cloudDetectionLowBand>
			<cloudMaskLowThreshold>0.2</cloudMaskLowThreshold>
			<cloudMaskAverageThreshold>0.23</cloudMaskAverageThreshold>
			<estimateAot>true</estimateAot>
			<aerosolType>RURAL</aerosolType>
			<defaultAotValue>0.1</defaultAotValue>
			<useProductWaterVapor>true</useProductWaterVapor>
			<watervaporoverride>2.0</watervaporoverride>
			<useProductOzone>true</useProductOzone>
			<defaultOzoneValue>0.33</defaultOzoneValue>
			<applySimecCorrection>${applySimecCorrection}</applySimecCorrection>
			<defaultAdjacencyWindowSize>1</defaultAdjacencyWindowSize>
			<keepWaterPixelsOnly>true</keepWaterPixelsOnly>
			<keepLandPixelsOnly>false</keepLandPixelsOnly>
			<glintCorrectionPostProcessing>${glintCorrectionPostProcessing}</glintCorrectionPostProcessing>
	  	</parameters>
	</node>
</graph>
