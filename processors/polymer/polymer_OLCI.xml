<graph id="polymer">
    <version>1.0</version>
	<node id="reprojectNode">
		<operator>reproject</operator>
		<sources>
			<source>${sourceFile}</source>
		</sources>
		<parameters>
			<crs>EPSG:4326</crs>
			<resampling>Nearest</resampling>
			<referencePixelX>0</referencePixelX>
			<referencePixelY>0</referencePixelY>
			<easting>${easting}</easting>
			<northing>${northing}</northing>
			<pixelSizeX>${pixelSizeX}</pixelSizeX>
			<pixelSizeY>${pixelSizeY}</pixelSizeY>
			<width>${width}</width>
			<height>${height}</height>
			<noDataValue>NaN</noDataValue>
		</parameters>
	</node>
		<node id="bandmathsNode">
		<operator>BandMaths</operator>
		<sources>
			<source>reprojectNode</source>
		</sources>
		<parameters>
			<targetBands>
				<targetBand>
					<name>latitude</name>
					<type>float64</type>
					<expression>latitude</expression>
					<noDataValue>NaN</noDataValue>
				</targetBand>
				<targetBand>
					<name>longitude</name>
					<type>float64</type>
					<expression>longitude</expression>
					<noDataValue>NaN</noDataValue>
				</targetBand>
				<targetBand>
					<name>sza</name>
					<type>float32</type>
					<expression>sza</expression>
					<noDataValue>NaN</noDataValue>
				</targetBand>
				<targetBand>
					<name>vza</name>
					<type>float32</type>
					<expression>vza</expression>
					<noDataValue>NaN</noDataValue>
				</targetBand>
				<targetBand>
					<name>saa</name>
					<type>float32</type>
					<expression>saa</expression>
					<noDataValue>NaN</noDataValue>
				</targetBand>
				<targetBand>
					<name>vaa</name>
					<type>float32</type>
					<expression>vaa</expression>
					<noDataValue>NaN</noDataValue>
				</targetBand>
				<targetBand>
					<name>bitmask</name>
					<type>int16</type>
					<description>LAND:1, CLOUD_BASE:2, L1_INVALID:4, NEGATIVE_BB:8, OUT_OF_BOUNDS:16, EXCEPTION:32, THICK_AEROSOL:64, HIGH_AIR_MASS:128, EXTERNAL_MASK:512, CASE2:1024, INCONSISTENCY:2048</description>
					<expression>bitmask</expression>
					<noDataValue>NaN</noDataValue>
				</targetBand>
				<targetBand>
					<validExpression>${validPixelExpression}</validExpression>
					<name>Rnir</name>
					<type>float32</type>
					<expression>Rnir</expression>
					<noDataValue>NaN</noDataValue>
				</targetBand>
				<targetBand>
					<validExpression>${validPixelExpression}</validExpression>
					<name>Rgli</name>
					<type>float32</type>
					<expression>Rgli</expression>
					<noDataValue>NaN</noDataValue>
				</targetBand>
				<targetBand>
					<validExpression>${validPixelExpression}</validExpression>
					<name>logchl</name>
					<type>float32</type>
					<expression>logchl</expression>
					<description>log10 of the chl-a concentration in mg/m3</description>
					<unit>mg/m3</unit>
					<noDataValue>NaN</noDataValue>
				</targetBand>
				<targetBand>
					<validExpression>${validPixelExpression}</validExpression>
					<name>bbs</name>
					<type>float32</type>
					<expression>bbs</expression>
					<noDataValue>NaN</noDataValue>
				</targetBand>
				<targetBand>
					<validExpression>${validPixelExpression}</validExpression>
					<name>Rw400</name>
					<type>float32</type>
					<expression>Rw400</expression>
					<description>water reflectance (dimensionless; fully normalized)</description>
					<unit>dl</unit>
					<spectralWavelength>400</spectralWavelength>
					<noDataValue>NaN</noDataValue>
				</targetBand>
				<targetBand>
					<validExpression>${validPixelExpression}</validExpression>
					<name>Rw412</name>
					<type>float32</type>
					<expression>Rw412</expression>
					<description>water reflectance (dimensionless; fully normalized)</description>
					<unit>dl</unit>
					<spectralWavelength>412</spectralWavelength>
					<noDataValue>NaN</noDataValue>
				</targetBand>
				<targetBand>
					<validExpression>${validPixelExpression}</validExpression>
					<name>Rw443</name>
					<type>float32</type>
					<expression>Rw443</expression>
					<description>water reflectance (dimensionless; fully normalized)</description>
					<unit>dl</unit>
					<spectralWavelength>443</spectralWavelength>
					<noDataValue>NaN</noDataValue>
				</targetBand>
				<targetBand>
					<validExpression>${validPixelExpression}</validExpression>
					<name>Rw490</name>
					<type>float32</type>
					<expression>Rw490</expression>
					<description>water reflectance (dimensionless; fully normalized)</description>
					<unit>dl</unit>
					<spectralWavelength>490</spectralWavelength>
					<noDataValue>NaN</noDataValue>
				</targetBand>
				<targetBand>
					<validExpression>${validPixelExpression}</validExpression>
					<name>Rw510</name>
					<type>float32</type>
					<expression>Rw510</expression>
					<description>water reflectance (dimensionless; fully normalized)</description>
					<unit>dl</unit>
					<spectralWavelength>510</spectralWavelength>
					<noDataValue>NaN</noDataValue>
				</targetBand>
				<targetBand>
					<validExpression>${validPixelExpression}</validExpression>
					<name>Rw560</name>
					<type>float32</type>
					<expression>Rw560</expression>
					<description>water reflectance (dimensionless; fully normalized)</description>
					<unit>dl</unit>
					<spectralWavelength>560</spectralWavelength>
					<noDataValue>NaN</noDataValue>
				</targetBand>
				<targetBand>
					<validExpression>${validPixelExpression}</validExpression>
					<name>Rw620</name>
					<type>float32</type>
					<expression>Rw620</expression>
					<description>water reflectance (dimensionless; fully normalized)</description>
					<unit>dl</unit>
					<spectralWavelength>620</spectralWavelength>
					<noDataValue>NaN</noDataValue>
				</targetBand>
				<targetBand>
					<validExpression>${validPixelExpression}</validExpression>
					<name>Rw665</name>
					<type>float32</type>
					<expression>Rw665</expression>
					<description>water reflectance (dimensionless; fully normalized)</description>
					<unit>dl</unit>
					<spectralWavelength>665</spectralWavelength>
					<noDataValue>NaN</noDataValue>
				</targetBand>
				<targetBand>
					<validExpression>${validPixelExpression}</validExpression>
					<name>Rw681</name>
					<type>float32</type>
					<expression>Rw681</expression>
					<description>water reflectance (dimensionless; fully normalized)</description>
					<unit>dl</unit>
					<spectralWavelength>681</spectralWavelength>
					<noDataValue>NaN</noDataValue>
				</targetBand>
				<targetBand>
					<validExpression>${validPixelExpression}</validExpression>
					<name>Rw709</name>
					<type>float32</type>
					<expression>Rw709</expression>
					<description>water reflectance (dimensionless; fully normalized)</description>
					<unit>dl</unit>
					<spectralWavelength>709</spectralWavelength>
					<noDataValue>NaN</noDataValue>
				</targetBand>
				<targetBand>
					<validExpression>${validPixelExpression}</validExpression>
					<name>Rw754</name>
					<type>float32</type>
					<expression>Rw754</expression>
					<description>water reflectance (dimensionless; fully normalized)</description>
					<unit>dl</unit>
					<spectralWavelength>754</spectralWavelength>
					<noDataValue>NaN</noDataValue>
				</targetBand>
				<targetBand>
					<validExpression>${validPixelExpression}</validExpression>
					<name>Rw779</name>
					<type>float32</type>
					<expression>Rw779</expression>
					<description>water reflectance (dimensionless; fully normalized)</description>
					<unit>dl</unit>
					<spectralWavelength>779</spectralWavelength>
					<noDataValue>NaN</noDataValue>
				</targetBand>
				<targetBand>
					<validExpression>${validPixelExpression}</validExpression>
					<name>Rw865</name>
					<type>float32</type>
					<expression>Rw865</expression>
					<description>water reflectance (dimensionless; fully normalized)</description>
					<unit>dl</unit>
					<spectralWavelength>865</spectralWavelength>
					<noDataValue>NaN</noDataValue>
				</targetBand>
				<targetBand>
					<validExpression>${validPixelExpression}</validExpression>
					<name>Rw1020</name>
					<type>float32</type>
					<expression>Rw1020</expression>
					<description>water reflectance (dimensionless; fully normalized)</description>
					<unit>dl</unit>
					<spectralWavelength>1020</spectralWavelength>
					<noDataValue>NaN</noDataValue>
				</targetBand>
				<targetBand>
					<validExpression>${validPixelExpression}</validExpression>
					<name>tsm_vantrepotte665</name>
					<type>float32</type>
					<expression>(((260 * Rw665) / (1 - (Rw665 / 0.142))) + 1.092)</expression>
					<unit>g/m^3</unit>
					<noDataValue>NaN</noDataValue>
				</targetBand>
				<targetBand>
					<validExpression>${validPixelExpression}</validExpression>
					<name>tsm_zhang709</name>
					<type>float32</type>
					<expression>pow((362507 * Rw709),  2.3222)</expression>
					<unit>g/m^3</unit>
					<noDataValue>NaN</noDataValue>
				</targetBand>
				<targetBand>
					<validExpression>${validPixelExpression}</validExpression>
					<name>tsm_binding754</name>
					<type>float32</type>
					<expression>(8.7774259 * Rw754 - 0.00027) / 0.010526</expression>
					<unit>g/m^3</unit>
					<noDataValue>NaN</noDataValue>
				</targetBand>
				<targetBand>
					<validExpression>${validPixelExpression}</validExpression>
					<name>chl_oc2</name>
					<type>float32</type>
					<expression>pow(10 , 0.2389 - (1.9369 * log10(Rw490 / Rw560)) + (1.7627 * pow(log10(Rw490 / Rw560), 2)) - (3.0777 * pow(log10(Rw490 / Rw560), 3)) - (0.1054 * pow(log10(Rw490 / Rw560), 4)))</expression>
					<unit>mg/m^3</unit>
					<noDataValue>NaN</noDataValue>
				</targetBand>
				<targetBand>
					<validExpression>${validPixelExpression}</validExpression>
					<name>chl_oc3</name>
					<type>float32</type>
					<expression>pow(10 , 0.2424 - (2.2146 * log10(max(Rw443,Rw490) / Rw560)) + (1.5193 * pow(log10(max(Rw443,Rw490) / Rw560), 2)) -	(0.7702 * pow(log10(max(Rw443,Rw490) / Rw560), 3)) - (0.4291 * pow(log10(max(Rw443,Rw490) / Rw560), 4)))</expression>
					<unit>mg/m^3</unit>
					<noDataValue>NaN</noDataValue>
				</targetBand>
				<targetBand>
					<validExpression>${validPixelExpression}</validExpression>
					<name>chl_2band</name>
					<type>float32</type>
					<expression>(61.324 * (Rw709 / Rw665)) - 37.94</expression>
					<unit>g/m^3</unit>
					<noDataValue>NaN</noDataValue>
				</targetBand>
				<targetBand>
					<validExpression>${validPixelExpression}</validExpression>
					<name>chl_gons</name>
					<type>float32</type>
					<expression>((Rw709 / Rw665) * (0.7 + (1.61 * Rw779 / (0.082 - (0.6 * Rw779)))) - 0.4 - pow(1.61 * Rw779 / (0.082 - (0.6 * Rw779)), 1.063)) / 0.016</expression>
					<unit>g/m^3</unit>
					<noDataValue>NaN</noDataValue>
				</targetBand>
				<targetBand>
					<validExpression>${validPixelExpression}</validExpression>
					<name>chl_ndci</name>
					<type>float32</type>
					<expression>14.039 + 86.115 * (((Rw709 / PI) - (Rw665 / PI)) / ((Rw709 / PI) + (Rw665 / PI))) + 194.325 * pow((((Rw709 / PI) - (Rw665 / PI)) / ((Rw709 / PI) + (Rw665 / PI))), 2)</expression>
					<unit>g/m^3</unit>
					<noDataValue>NaN</noDataValue>
				</targetBand>
				<targetBand>
					<validExpression>${validPixelExpression}</validExpression>
					<name>area_bgr</name>
					<type>float32</type>
					<expression>0.5*abs(490*10000*Rw560+560*10000*Rw665+665*10000*Rw490-560*10000*Rw490-665*10000*Rw560-490*10000*Rw665)</expression>
					<unit>dl</unit>
					<noDataValue>NaN</noDataValue>
				</targetBand>
				<targetBand>
					<validExpression>${validPixelExpression}</validExpression>
					<name>bgr_whit</name>
					<type>float32</type>
					<expression>if 0.5*abs(490*10000*Rw560+560*10000*Rw665+665*10000*Rw490-560*10000*Rw490-665*10000*Rw560-490*10000*Rw665) > 13000 then 1 else 0</expression>
					<unit>dl</unit>
					<noDataValue>NaN</noDataValue>
				</targetBand>
			</targetBands>
    	</parameters>
	</node>
    <node id="writeNode">
        <operator>write</operator>
		<sources>
			<source>bandmathsNode</source>
		</sources>
		<parameters>
			<file>${outputFile}</file>
			<formatName>NetCDF4-BEAM</formatName>
		</parameters>
    </node>
</graph>